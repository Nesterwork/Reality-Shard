<?xml version="1.0" encoding="UTF-8"?>
<game-app>
    <meta-info>
        <display-name>My Game App</display-name>
        <description>This is the coolest game ever!</description>
    </meta-info>
    <shardlets>
        <shardlet name="MyShardletName" class="com.example.blubb.MyShardletClass">
            <init-param name="can_haz_string_parameters" value="true"></init-param>
            <filter-chain>
                <filter name="MyFilterName" class="com.example.bla.MyFilterClass" in="true" out="false">
                    <!--in/out indicates whether the filter should filter incoming and/or outgoing streams are activated-->
                    <init-param name="" value=""></init-param>
                </filter>
                <!--multiple filters allowed, the topmost will be the first in line-->
            </filter-chain>
        </shardlet>
    </shardlets>
    <context>
        <init-param name="" value=""></init-param>
    </context>
</game-app>